{
    "name": "@swim-io/plugin-ecosystem-ethereum",
    "version": "0.2.0",
    "description": "A package for adding Ethereum ecosystem support.",
    "main": "build",
    "types": "types",
    "files": [
        "build/",
        "types/",
        "*.md",
        "!*.test.*",
        "!**/fixtures/"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/swim-io/swim/tree/master/packages/plugin-ecosystem-ethereum"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    },
    "scripts": {
        "typecheck": "tsc",
        "format": "prettier --write \"./src/**/*.ts\"",
        "format:check": "prettier --check \"./src/**/*.ts\"",
        "lint": "eslint \"./src/**/*.ts\"",
        "lint:fix": "eslint --fix \"./src/**/*.ts\"",
        "verify": "yarn typecheck && yarn format:check && yarn lint",
        "build": "rm -rf ./build/ ./types/ && tsc",
        "prepare": "yarn verify && yarn build"
    },
    "dependencies": {
        "@swim-io/core-types": "workspace:^",
        "@swim-io/evm-types": "workspace:^"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.29.0",
        "@typescript-eslint/parser": "^5.29.0",
        "eslint": "^8.18.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-deprecation": "^1.3.2",
        "eslint-plugin-functional": "^4.2.1",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.0.0",
        "prettier": "^2.7.1",
        "typescript": "^4.7.4"
    }
}
