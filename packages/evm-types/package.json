{
  "name": "@swim-io/evm-types",
  "version": "0.2.0",
  "description": "Swim types relating to generic EVM chains.",
  "main": "build",
  "types": "types",
  "files": [
    "build/",
    "types/",
    "*.md",
    "!*.test.*",
    "!**/fixtures/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/swim-io/swim/tree/master/packages/evm-types"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "typecheck": "tsc",
    "format": "prettier --write \"./src/**/*.ts\"",
    "format:check": "prettier --check \"./src/**/*.ts\"",
    "lint": "eslint \"./src/**/*.ts\"",
    "lint:fix": "eslint --fix \"./src/**/*.ts\"",
    "verify": "yarn typecheck && yarn format:check && yarn lint",
    "build": "rm -rf ./build/ ./types/ && tsc",
    "prepare": "yarn verify && yarn build"
  },
  "dependencies": {
    "@swim-io/core-types": "workspace:^",
    "ethers": "^5.6.9"
  },
  "devDependencies": {
    "@swim-io/eslint-config": "workspace:^",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-deprecation": "^1.3.2",
    "eslint-plugin-functional": "^4.2.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.2",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  }
}
