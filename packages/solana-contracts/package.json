{
  "name": "@swim-io/solana-contracts",
  "version": "0.22.0",
  "description": "TS bindings for Swim Solana pool contracts.",
  "main": "build",
  "types": "types",
  "files": [
    "build/",
    "types/",
    "*.md",
    "!*.test.*",
    "!**/fixtures/"
  ],
  "scripts": {
    "build:pool": "anchor build -p two_pool",
    "build:propeller": "anchor build -p propeller -- --features localnet",
    "build:propeller-devnet": "anchor build -p propeller -- --features devnet",
    "build:propeller-mainnet": "anchor build -p propeller -- --features mainnet",
    "build:ts": "rm -rf ./build/ ./types/ ./tsconfig.tsbuildinfo && tsc",
    "build": "yarn build:ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "idl:pool": "anchor idl parse -f programs/two-pool/src/lib.rs -o $INIT_CWD/src/artifacts/two_pool.json -t $INIT_CWD/src/artifacts/two_pool.ts",
    "idl:propeller": "anchor idl parse -f programs/propeller/src/lib.rs -o $INIT_CWD/src/artifacts/propeller.json -t $INIT_CWD/src/artifacts/propeller.ts",
    "prep:pool": "yarn run build:pool && yarn run idl:pool",
    "prep:propeller": "yarn run build:propeller && yarn run idl:propeller",
    "prep": "yarn run prep:pool && yarn run prep:propeller",
    "prep:devnet": "yarn run prep:pool && yarn run prep:propeller-devnet",
    "prep:mainnet": "yarn run prep:pool && yarn run prep:propeller-mainnet",
    "test": "yarn run prep && anchor test --skip-build",
    "test:integration": "yarn run prep && anchor test --skip-build integration",
    "test:propeller": "yarn run prep && anchor test --skip-build propeller",
    "test:pool": "yarn run prep && anchor test --skip-build pool",
    "test:utils": "yarn run prep && anchor test --skip-build utils",
    "typecheck": "tsc",
    "verify": "yarn typecheck && yarn format:check && yarn lint && yarn test",
    "prepare": "yarn verify && yarn build"
  },
  "dependencies": {
    "@project-serum/anchor": "^0.25.0",
    "@project-serum/borsh": "^0.2.5",
    "@solana/spl-token": "^0.2.0",
    "@solana/web3.js": "^1.50.1"
  },
  "devDependencies": {
    "@certusone/wormhole-sdk": "^0.6.0",
    "@certusone/wormhole-sdk-wasm": "^0.0.1",
    "@ethersproject/bytes": "^5.6.1",
    "@metaplex-foundation/js": "^0.14.0",
    "@solana/spl-memo": "^0.2.2",
    "@swim-io/eslint-config": "workspace:^",
    "@swim-io/tsconfig": "workspace:^",
    "@switchboard-xyz/sbv2-utils": "^0.1.43",
    "@switchboard-xyz/switchboard-v2": "^0.0.129",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/jest": "^28.1.7",
    "@types/mocha": "^9.0.0",
    "@types/node": "^18.7.16",
    "byteify": "^2.0.10",
    "chai": "^4.3.4",
    "elliptic": "^6.5.4",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-deprecation": "^1.3.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^4.2.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ethers": "^5.6.9",
    "jest": "^28.1.3",
    "keccak256": "^1.0.6",
    "long": "^5.2.0",
    "mocha": "^9.0.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.8",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "web3-utils": "^1.7.5"
  }
}
