{
  "name": "@swim-io/pool-math",
  "version": "0.3.0",
  "description": "A package for calculating input/output amounts for Swim liquidity pools.",
  "main": "build",
  "types": "types",
  "files": [
    "build/",
    "types/",
    "*.md",
    "!*.test.*",
    "!**/fixtures/"
  ],
  "scripts": {
    "typecheck": "tsc",
    "format": "prettier --write \"./src/**/*.ts\"",
    "format:check": "prettier --check \"./src/**/*.ts\"",
    "lint": "eslint \"./src/**/*.ts\"",
    "lint:fix": "eslint --fix \"./src/**/*.ts\"",
    "test": "jest",
    "verify": "yarn typecheck && yarn format:check && yarn lint && yarn test --watchAll=false",
    "build": "rm -rf ./build/ ./types/ && tsc",
    "prepare": "yarn verify && yarn build"
  },
  "dependencies": {
    "decimal.js": "^10.3.1"
  },
  "devDependencies": {
    "@swim-io/eslint-config": "workspace:^",
    "@types/jest": "^28.1.3",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-deprecation": "^1.3.2",
    "eslint-plugin-functional": "^4.2.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.1",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  }
}
