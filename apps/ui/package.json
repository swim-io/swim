{
  "name": "@swim-io/ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=development node scripts/start.js",
    "build": "node scripts/build.js",
    "release": "SENTRY_RELEASE=$(git rev-parse --short HEAD) node scripts/build.js",
    "test": "node scripts/test.js",
    "format": "prettier --write \"./src/**/*.{ts,tsx}\" \".storybook/**/*.{js,ts,tsx}\"",
    "format:check": "prettier --check \"./src/**/*.{ts,tsx}\" \".storybook/**/*.{js,ts,tsx}\"",
    "lint": "eslint \"./src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix \"./src/**/*.{ts,tsx}\"",
    "typecheck": "tsc",
    "types:generate": "typechain --target=ethers-v5 --out-dir=src/contracts/ abi/*.json",
    "verify": "yarn typecheck && yarn lint && yarn test --watchAll=false && yarn format:check",
    "storybook": "DISABLE_ESLINT_PLUGIN=true start-storybook -p 6006",
    "build-storybook": "DISABLE_ESLINT_PLUGIN=true build-storybook"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": "14.x"
  },
