{
  "name": "@swim-io/evm-contracts",
  "version": "0.13.0",
  "description": "TS bindings for Swim EVM pool contracts.",
  "main": "build",
  "types": "types",
  "files": [
    "build/",
    "types/",
    "*.md",
    "!*.test.*",
    "!**/fixtures/"
  ],
  "scripts": {
    "start": "hardhat node",
    "deploy": "hardhat deploy",
    "update": "hardhat update",
    "pool-state": "hardhat pool-state",
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "test": "hardhat test",
    "test:staging": "hardhat test --network rinkeby",
    "test:fixtures": "hardhat test --deploy-fixture --network localhost",
    "transfer-ownership": "hardhat run scripts/transfer_ownership.ts",
    "format": "prettier --write \"./{src,test}/**/*.ts\"",
    "format:check": "prettier --check \"./{src,test}/**/*.ts\"",
    "lint:sol": "solhint 'contracts/*.sol'",
    "lint:sol:fix": "solhint 'contracts/*.sol' --fix",
    "lint:ts": "eslint \"./{src,test}/**/*.ts\"",
    "lint:ts:fix": "eslint --fix \"./{src,test}/**/*.ts\"",
    "lint": "yarn lint:sol && yarn lint:ts",
    "lint:fix": "yarn lint:sol:fix && yarn lint:ts:fix",
    "coverage": "hardhat coverage",
    "typecheck": "tsc",
    "verify": "yarn typecheck && yarn format:check && yarn lint && yarn test",
    "build": "rm -rf ./build/ ./types/ ./tsconfig.tsbuildinfo && tsc",
    "prepare": "yarn verify && yarn build"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.3",
    "@nomiclabs/hardhat-ethers": "^2.1.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@openzeppelin/contracts": "^4.7.3",
    "@openzeppelin/contracts-upgradeable": "^4.7.3",
    "@openzeppelin/hardhat-upgrades": "^1.19.1",
    "@swim-io/eslint-config": "workspace:^",
    "@swim-io/tsconfig": "workspace:^",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.6.2",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "chai": "^4.3.6",
    "chai-bn": "^0.3.1",
    "dotenv": "^16.0.1",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "ethers": "^5.6.9",
    "hardhat": "^2.10.1",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-dev.23",
    "solc": "^0.8.15",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.7.4"
  }
}
